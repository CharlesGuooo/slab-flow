# ============================================================
# SlabFlow Environment Variables Template
# Copy this file to .env.local and fill in your values
# ============================================================

# ============================================================
# Database (Neon Postgres)
# ============================================================
DATABASE_URL="postgres://username:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ============================================================
# Object Storage (Cloudflare R2) - Platform unified
# ============================================================
R2_ACCOUNT_ID="your_account_id"
R2_ACCESS_KEY_ID="your_access_key_id"
R2_SECRET_ACCESS_KEY="your_secret_access_key"
R2_BUCKET_NAME="slabflow-main-bucket"
R2_PUBLIC_URL="https://pub-xxx.r2.dev"

# ============================================================
# API Keys (Platform unified management)
# ============================================================
# Resend for transactional emails
RESEND_API_KEY="re_xxxxxxxxxxxx"

# OpenAI for chatbot and image analysis
OPENAI_API_KEY="sk-xxxxxxxxxxxx"

# World Labs for 3D reconstruction
WORLD_LABS_API_KEY="sk-xxxxxxxxxxxx"

# ============================================================
# Session Security
# ============================================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="generate_a_random_32_character_string_here"

# ============================================================
# Application Configuration
# ============================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
